    <script>
        // Filter buttons
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');
            });
        });

        // Tool use buttons
        document.querySelectorAll('.tool-use-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.stopPropagation();
                const toolName = this.closest('.tool-box').querySelector('h3').textContent;
                alert(`Opening: ${toolName}`);
            });
        });

        // Category cards
        document.querySelectorAll('.category-card').forEach(card => {
            card.addEventListener('click', function() {
                const category = this.querySelector('h3').textContent;
                alert(`Browsing: ${category} tools`);
            });
        });

        // Tool boxes
        document.querySelectorAll('.tool-box').forEach(box => {
            box.addEventListener('click', function() {
                const toolName = this.querySelector('h3').textContent;
                alert(`Opening: ${toolName} tool`);
            });
        });

        // Search functionality
        const searchInput = document.querySelector('input[placeholder="Search tools..."]');
        searchInput.addEventListener('input', function() {
            const term = this.value.toLowerCase();
            document.querySelectorAll('.tool-box').forEach(box => {
                const title = box.querySelector('h3').textContent.toLowerCase();
                const desc = box.querySelector('p').textContent.toLowerCase();
                
                if (title.includes(term) || desc.includes(term)) {
                    box.style.display = 'block';
                } else {
                    box.style.display = 'none';
                }
            });
        });
    </script>
